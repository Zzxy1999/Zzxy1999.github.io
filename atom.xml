  <entry>
    <title>6.s081 syscall</title>
    <link href="http://example.com/2025/01/15/6-s081-syscall/"/>
    <id>http://example.com/2025/01/15/6-s081-syscall/</id>
    <published>2025-01-15T01:58:36.000Z</published>
